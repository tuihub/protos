{
    "$schema": "https://tuihub.github.io/protos/schemas/savedata/v2.1.json",
    "platform": "windows",
    "caseSensitive": false,
    "entries": [
        {
            "id": 1,
            "baseDirMode": "gameRoot",
            "baseDir": ".\\savedata\\",
            "filePatterns": [
                {
                    "type": "include",
                    "pattern": "FLAG???"
                },
                {
                    "type": "exclude",
                    "pattern": "FLAG000"
                },
                {
                    "type": "exclude",
                    "pattern": "FLAG999"
                }
            ],
            "clearBaseDirBeforeRestore": false
        },
        {
            "id": 2,
            "baseDirMode": "userDocument",
            "baseDir": ".\\example_inc\\rvdata\\",
            "filePatterns": [
                {
                    "type": "include",
                    "pattern": "*.rvdata2"
                },
                {
                    "type": "exclude",
                    "pattern": "System.rvdata2"
                }
            ],
            "clearBaseDirBeforeRestore": false
        },
        {
            "id": 3,
            "baseDirMode": "userProfile",
            "baseDir": ".\\Saved Games\\sPlus\\alp\\",
            "filePatterns": [
                {
                    "type": "include",
                    "pattern": "*"
                },
                {
                    "type": "exclude",
                    "pattern": "THM999"
                }
            ],
            "clearBaseDirBeforeRestore": false
        },
        {
            "id": 4,
            "baseDirMode": "absolute",
            "baseDir": "D:\\dummy\\savedata\\",
            "filePatterns": [
                {
                    "type": "include",
                    "pattern": "*"
                }
            ],
            "clearBaseDirBeforeRestore": true
        }
    ]
}